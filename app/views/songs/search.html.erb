<h1> Search</h1>
<%= form_tag(search_path, :method => "get", id: "search-form") do %>
		<div class="input-group">
				<%= text_field_tag 'search', params[:search], placeholder: "Search Tracks" , class: 'form-control' %>
				<span class="input-group-btn">
						<%= select_tag "search_opt",options_for_select(["Track","Album","Artist"],selected: 'Track'), class: 'form-control', style: "width:auto"%>
						<%= submit_tag "submit",class: "btn btn-danger",  'data-disable-with' => "Please wait.." %>
				</span>
		</div>
<% end %>
</div>
<div class="container-fluid">
		<div class ="row">
				<div class="row spacer">
						<div class="span4">&nbsp</div>
						<div class="span4">&nbsp</div>
						<div class="span4">&nbsp</div>
				</div>
				<%case @search_opt %>
				<%when 'Artist'%>
						<% if @search_res.first != nil %>
								<% @search_res.each do |res| %>
										<h1> <%= res.name %> </h1>
										<% res.top_tracks(:US).each do |track| %>
												<div class="col-lg-12 col-md-4 col-sm-6">
														<%= link_to image_tag(track.album.images.first["url"], size: "350" ),new_song_path(:track => track.name, :album => track.album.name, :artists => @search_res.first.name, :uri => track.uri) %> 
														<h3> <%= track.name%> </h3>
												</div>
										<% end %>
										<div class="row top7"></div>
								<% end %>
						<% end %>
				<%when 'Album'%>
						<% if @search_res != nil %>
								<% @search_res.each do |res| %>
										<h1> <%= res.name %> </h1>
										<% res.tracks.each do |track| %>
												<div class="col-lg-3 col-md-4 col-xs-6 thumb">
														<%= link_to image_tag(track.album.images.first["url"], size: "350" ),new_song_path(:track => track.name, :album => track.album.name, :artists => @search_res.first.name, :uri => track.uri) %> 
														<h3> <%= track.name%> </h3>
												</div>
										<% end %>
										<div class="row top7"></div>
								<% end %>
						<% end %>
				<%when 'Track'%>
						<% if @search_res != nil %>
								<% @search_res.each do |track| %>
										<div class="col-lg-3 col-md-4 col-xs-6 ">
												<%= link_to image_tag(track.album.images.first["url"], size: "300" ),new_song_path(:track => track.name, :album => track.album.name, :artists => @search_res.first.name, :uri => track.uri, :url => track.album.images.first["url"]) %> 
																		<h2><%= track.name%></h2>
																</div>
														</div>
												</div>
										</div>
								<% end %>
						<% end %>
				<% end %>
			</div>
